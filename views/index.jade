extends layout

mixin tarjeta(titulo, cuerpo, imagen, enlace, boton)
  div.col-lg-4
    div.card
      img.card-img-top(src=imagen, alt=titulo)
      div.card-body
        h5.card-title= titulo
        p.card-text= cuerpo
      div.card-body.text-right
        a.btn.btn-secondary(href=enlace role="button") Ver mas Â»

block content
  div.carousel.slide(id="myCarousel", data-ride="carousel")
    ol.carousel-indicators
      li(data-target="#myCarousel", data-slide-to="0", class="active")
      li(data-target="#myCarousel", data-slide-to="1")
      li(data-target="#myCarousel", data-slide-to="2")
    div.carousel-inner
      div.carousel-item.active
        svg(class="bd-placeholder-img" width="100%" height="100%" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img")
          rect(width="100%" height="100%" fill="#777")
        div.container
          div.carousel-caption.text-left
            h1= contenido[0].titulo
            p= contenido[0].descripcion
            p
              a(class="btn btn-lg btn-primary" href=contenido[0].enlace role="button")= contenido[0].boton
      div.carousel-item
        svg(class="bd-placeholder-img" width="100%" height="100%" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img")
          rect(width="100%" height="100%" fill="#777")
        div.container
          div.carousel-caption
            h1= contenido[1].titulo
            p= contenido[1].descripcion
            p
              a(class="btn btn-lg btn-primary" href=contenido[1].enlace role="button")= contenido[1].boton
      div.carousel-item
        svg(class="bd-placeholder-img" width="100%" height="100%" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img")
          rect(width="100%" height="100%" fill="#777")
        div.container
          div.carousel-caption.text-right
            h1= contenido[3].titulo
            p= contenido[3].descripcion
            p
              a(class="btn btn-lg btn-primary" href=contenido[3].enlace role="button")= contenido[3].boton
      a.carousel-control-prev(href="#myCarousel", role="button", data-slide="prev")
        span.carousel-control-prev-icon(aria-hidden="true")
        span.sr-only Previous
      a(class="carousel-control-next", href="#myCarousel", role="button", data-slide="next")
        span(class="carousel-control-next-icon", aria-hidden="true")
        span.sr-only Next
  div.container
    div.row
      each item in contenido
        +tarjeta(item.titulo, item.descripcion, item.imagen, item.enlace, item.boton)
  hr
