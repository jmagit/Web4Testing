extends layout

block content
  .container-fluid
    h1 Subir ficheros
    form(action="fileupload" method="post" enctype="multipart/form-data")
      .input-group
        input.form-control-file(type="file", name="filestoupload", multiple="multiple", style="max-width: 85% !important;", required)
        .input-group-append
          input.btn.btn-sm.btn-outline-secondary(type="submit", value="Subir ficheros")
    h2.mt-3 Ficheros seleccionados
    ol#ficheros
    h2.mt-3 Ficheros subidos
    ul
      each fich in files
        li
          a.align-center(href='/files/'+fich, target="_blank")= fich
          button.ml-2.align-center.btn.btn-sm.btn-link(title='Ver ' + fich + ' en el visor de documentos', onclick="$('#visorFrame').attr('src', '/files/"+fich+"');")
            i.fas.fa-eye
          a.ml-2.align-center.text-danger(title='Borrar el documento ' + fich, href='/deleteupload?file='+fich)
            i.fas.fa-trash-alt
    iframe#visorFrame(style='width: 100%; height: 500px;border: 1px solid black', title='Visor de documentos')
block scripts
  script.
    $(document).ready(function () {
          $('input[type=file]').change(function(ev) {
            let listado = $('#ficheros').empty()
            for(let file of ev.target.files) {
              listado.append($('<li>' + file.name + '</li>'))
            }
          });
    })
